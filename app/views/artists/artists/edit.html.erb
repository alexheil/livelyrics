<%= provide(:title, "Edit #{@artist.artist_name}") %>
<%= render 'partials/header' %>
<%= render 'partials/alpha' %>
<div class="wrapper">
  <div class="container">
    <div class="content">
      <div class="form-title">
        <h2>Update an Artist</h2>
      </div>
      <%= form_for(@artist, url: artist_path) do |f| %>
        <div class="field">
          <%= f.text_field :artist_name, placeholder: "Artist Name", class: "text-field" %>
        </div>
        <div class="field">
          <%= f.text_field :artist_facebook, placeholder: "Facebook URL", class: "text-field" %>
        </div>
        <div class="actions">
          <%= f.submit "Update Artist", class: "submit-button" %>
        </div>
      <% end %>
    </div>
    <%= render 'partials/artist_sidebar' %>
  </div>
</div>
<%= render 'partials/footer' %>
