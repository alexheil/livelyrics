<%= provide(:title, "Edit #{@lyric.track_name} | #{@artist.artist_name}") %>
<%= render 'partials/header' %>
<%= render 'partials/alpha' %>
<div class="wrapper">
  <div class="container">
    <div class="content">
      <div class="form-title">
        <h2>Update <%= @lyric.track_name %> in <%= @album.name %> by <%= @artist.artist_name %></h2>
      </div>
      <%= form_for(@lyric, url: artist_album_lyric_path) do |f| %>
      <%= render 'partials/lyric_error_messages' %>
        <div class="field">
          <%= f.text_field :track_number, placeholder: "Track Number", class: "text-field" %>
        </div>
        <div class="field">
          <%= f.text_field :track_name, placeholder: "Track Name", class: "text-field" %>
        </div>
        <div class="field">
          <%= f.text_area :lyrics, placeholder: "Track Lyrics", class: "text-area" %>
        </div>
        <div class="actions">
          <%= f.submit "Update Lyrics", class: "submit-button" %>
        </div>
      <% end %>
    </div>
    <%= render 'partials/artist_sidebar' %>
  </div>
</div>
<%= render 'partials/footer' %>
