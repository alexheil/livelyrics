<div class="sidebar">

  <span class="fancy-font"><%= link_to "let:lyrics", root_url %></span>

  <%= form_tag(artists_path, :method => "get") do %>
    <div class="field">
      <%= text_field_tag :search, params[:search], placeholder: "Search Artists", class: "text-field" %>
    </div>
      <%= submit_tag "Search", class: "submit-button", :style => "display: none;" %>
  <% end %>

  <% @artist.albums.each do |album| %>
  <% cache album do %>
    <div class="album-separate">
      <span class="album-name accent"><%= link_to album.name, artist_album_path(@artist, album) %></span> - <%= album.year %>
    </div >
    <% album.lyrics.each do |lyric| %>
    <% cache lyric do %>
      <div class="track-separate">
        <%= lyric.track_number %> - <%= link_to lyric.track_name, artist_album_lyric_path(@artist, album, lyric) %>
      </div>
    <% end %>
    <% end %>
    <div class="track-separate">
      <%= link_to "Add a track to #{album.name}", new_artist_album_lyric_path(@artist, album) %>
    </div>
  <% end %>
  <% end %>
  <div class="album-separate">
    <%= link_to "Add an album for #{@artist.artist_name}", new_artist_album_path(@artist) %>
  </div>

  <a href="https://www.amazon.com/gp/dmusic/promotions/AmazonMusicUnlimited?ref_=assoc_tag_ph_1483579440886&_encoding=UTF8&camp=1789&creative=9325&linkCode=pf4&tag=letlyrics-20&linkId=d7a1bb8cf635a8e4d77a7b0c8e2fc2e4">
    <div class="noisaea-container">
      <div class="noisaea-title">
        Amazon Music Unlimited
      </div>
      <div class="noisaea-sub track-separate">
      Any song, anywhere
      </div>
      <div class="track-separate black">
        Tens of millions of songs with new releases from today's most popular artists. Listen ad-free with unlimited skips. Download for offline listening.
      </div>
    </div>
  </a>

</div>
